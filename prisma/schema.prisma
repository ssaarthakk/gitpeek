generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  credits     Int         @default(1)
  sharedLinks ShareLink[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  installation_id    String?
  installation_token String? @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ShareLink {
  id             String     @id @default(cuid())
  repoFullName   String
  createdAt      DateTime   @default(now())
  expiresAt      DateTime?
  hashedPassword String?
  linkViews      LinkView[]

  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  isOneTime Boolean @default(false)
}

model LinkView {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userAgent String?
  ipAddress String?

  shareLinkId String
  shareLink   ShareLink @relation(fields: [shareLinkId], references: [id], onDelete: Cascade)
}
